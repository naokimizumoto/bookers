
<h1>Books</h1>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>



<% @books.each do |book| %>
      <tr>
          <td> <%= book.title %></td>
          <td><%= book.body %></td>
          <td> <%= link_to "show", book_path(book) %></td>
          <td> <%= link_to "edit", edit_book_path(book) %></td>
          <td> <%= link_to "destroy", book_path(book), method: :delete%></td>
      </tr>
  <% end %>
</tbody>
</table>

<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:<br>
     <% @book.errors.full_messages.each do |message| %>
        <%= message %>
  <% end %>
<% end %>


<h2>New Book</h2>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book'%></p>
<% end %>

